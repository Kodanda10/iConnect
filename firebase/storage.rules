rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      // Allow access by default for now if auth is valid
      // In production, we'd want to be more specific, e.g.
      // match /users/{userId}/{fileName} { ... }
      
      // READ: Allow public read (for leader headers, profile pics)
      allow read: if true;
      
      // WRITE: Allow authenticated users only (Staff/Leaders)
      allow write: if request.auth != null;
    }
  }
}
