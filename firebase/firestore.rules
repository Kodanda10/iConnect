rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function: Check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Helper function: Get user document
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    // Helper function: Check user role
    function hasRole(role) {
      return isSignedIn() && getUserData().role == role;
    }
    
    function isStaff() {
      return hasRole('STAFF');
    }
    
    function isLeader() {
      return hasRole('LEADER');
    }
    
    function isStaffOrLeader() {
      return isStaff() || isLeader();
    }
    
    // Users collection - users can read/write own doc, staff can read all
    match /users/{userId} {
      allow read: if isSignedIn() && (request.auth.uid == userId || isStaff());
      
      // Security Hardening (2025-12-18): Prevent Privilege Escalation
      // Clients must never be able to self-assign privileged roles (STAFF/LEADER).
      // Profile provisioning for privileged users should be done by an administrator process.
      allow create: if isSignedIn() && request.auth.uid == userId
                    && (
                      !('role' in request.resource.data) ||
                      request.resource.data.role == 'UNASSIGNED'
                    );
      
      // 2. Update: Users can update own data but CANNOT change their role
      //    Only LEADER can change roles or update other users
      allow update: if (isSignedIn() && request.auth.uid == userId && request.resource.data.role == resource.data.role)
                    || isLeader();
                    
      allow delete: if isLeader();
    }
    
    // Settings collection - singleton document
    // SECURITY FIX (2025-12-16): Restricted write access to STAFF only
    match /settings/{docId} {
      // Keep the public surface area minimal: only the singleton app config is public-read.
      // Any additional settings docs require authentication.
      allow read: if docId == 'app_config' || isSignedIn();
      allow write: if isStaff(); // Only authenticated staff can modify settings
    }
    
    // Constituents collection
    match /constituents/{constituentId} {
      allow read: if isStaffOrLeader();
      // SECURITY FIX: Removed 'seeded' tag backdoor - only authenticated staff can create
      allow create: if isStaff();
      allow update, delete: if isStaff();
    }
    
    // Tasks collection
    match /tasks/{taskId} {
      allow read: if isStaffOrLeader();
      // Staff can do full CRUD, Leader can update status/notes + action flags
      allow create: if isStaff();
      // Security Fix (2025-12-17): Expanded LEADER permissions to match client writes
      allow update: if isStaff() || (isLeader() && 
        request.resource.data.diff(resource.data).affectedKeys()
          .hasOnly(['status', 'notes', 'action_taken', 'completed_by', 
                    'callSent', 'callSentAt', 'smsSent', 'smsSentAt', 
                    'whatsappSent', 'whatsappSentAt', 'updatedAt']));
      allow delete: if isStaff();
    }
    
    // Festivals collection
    match /festivals/{festivalId} {
      allow read: if isStaffOrLeader();
      allow write: if isStaff();
    }

    // Active Tickers collection (Public Read for App users, Write for Staff/Leader)
    match /active_tickers/{docId} {
      allow read: if isSignedIn();
      allow write: if isStaffOrLeader();
    }

    // Action Logs collection - Leaders log their actions, Staff can read/modify
    // P0 Security (2025-12-17): Added per implementation_plan.md
    match /action_logs/{logId} {
      allow read: if isStaffOrLeader();
      allow create: if isLeader(); // Leaders log their own actions
      allow update, delete: if isStaff(); // Only staff can modify logs
    }

    // Scheduled Meetings collection - For conference call scheduling
    // P0 Feature (2025-12-17): Added per implementation_plan.md
    match /scheduled_meetings/{meetingId} {
      allow read: if isStaffOrLeader();
      allow create: if isStaffOrLeader(); // Both can create meetings
      allow update, delete: if isStaff(); // Only staff can modify/cancel
    }
  }
}
